<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h3>Perguntas</h3>
        <hr>
        <a href="/perguntar" class="btn btn-primary col-12">Fazer Pergunta</a>
        <hr>
        <% perguntas.forEach(pergunta => {%>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %>?</h3>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" href="/pergunta/<%= pergunta._id %>">Responder!</a>  
            </div>
        </div>
        <% })%>
    </div>
</body>
<%- include('partials/footer.ejs') %>