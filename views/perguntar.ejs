<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Fazer pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvandoPergunta">
                    <label>Título</label>
                    <input type="text" name="titulo" placeholder="Título" class="form-control">
                    <br>
                    <label>Descrição</label>
                    <textarea name="descricao" placeholder="Descreva sua pergunta" id="descricao" cols="30" rows="5" class="form-control"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar!</button>
                </form>
            </div>
        </div>
    </div>
</body>
